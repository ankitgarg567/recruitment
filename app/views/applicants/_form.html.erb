<head>
      <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.16/jquery-ui.min.js"></script>
    <link rel="stylesheet" type="text/css" href="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.16/themes/hot-sneaks/jquery-ui.css" />
    <script src="pathtojs/jquery-ui-timepicker-addon.js"></script>
</head>
<%= form_for @applicant, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :technology, :class => 'control-label' %>
    <div class="controls">
          <%= f.select :technology, Technology.all.collect(&:name), {},:multiple => true %>

    </div>
  </div>
  <div class="control-group">
    <%= f.label :sourcingpartner, :class => 'control-label' %>
    <div class="controls">
    <%= f.select :sourcingpartner, Sourcingpartner.all.collect(&:name) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :role, :class => 'control-label' %>
    <div class="controls">
    <%= f.select :role, Role.all.collect(&:name) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :round, :class => 'control-label' %>
    <div class="controls">
    <%= f.select :round, Round.all.collect(&:name) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :scheduleofinterview, :class => 'control-label' %>
    <div class="controls">
       <%= f.text_field :scheduleofinterview, :id => 'datetime', :class => 'datetime' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :interviewers, :class => 'control-label' %>
    <div class="controls">
    <%= f.select :interviewers, Interviewer.all.collect(&:name), {},:multiple => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :status, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :status, ['Selected','Not Selected','Under Screening'] %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :CV, :class => 'control-label' %>
    <div class="controls">
 <%= f.file_field :cv %>    </div>
  </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                applicants_path, :class => 'btn' %>
  </div>
<% end %>
