<%- model_class = Applicant -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:technology) %></th>
      <th><%= model_class.human_attribute_name(:sourcing_Partner) %></th>
      <th><%= model_class.human_attribute_name(:role) %></th>
      <th><%= model_class.human_attribute_name(:round) %></th>
      <th><%= model_class.human_attribute_name(:schedule_of_interview) %></th>
      <th><%= model_class.human_attribute_name(:interviewers) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:cv) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @applicants.each do |applicant| %>
      <tr>
       <td><%= link_to applicant.name, applicant_path(applicant) %></td>
        <td><%= applicant.technology %></td>
        <td><%= applicant.sourcingpartner %></td>
        <td><%= applicant.role %></td>
        <td><%= applicant.round %></td>
        <td><%= applicant.scheduleofinterview %></td>
        <td><%= applicant.interviewers %></td>
        <td><%= applicant.status %></td>
        <td><%= link_to 'My CV', applicant.cv.url %></td>
        <td>

          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_applicant_path(applicant), :class => 'btn btn-mini' %>
          <%= link_to t('.delete', :default => t("helpers.links.delete")),
                      applicant_path(applicant),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_applicant_path,
            :class => 'btn btn-primary' %>
